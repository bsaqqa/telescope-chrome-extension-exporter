{
  "name": "Telescope Statisctics Exporter",
  "version": "0.0.1",
  "auther": "@bsaqqa",
  "manifest_version": 2,
  "description": "This extension was created to get Statistics from laravel telescope",
  "homepage_url": "http://bsaqqa.me",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "cookies",
    "fileBrowserHandler",
    "management",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/telescope/requests/*",
        "http://*/telescope/requests/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Telescope Statisctics exporter"
  }
}